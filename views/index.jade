extend layout

block head
  script(src="/js/jquery.2.1.4.min.js")
  script(src="/js/bootstrap.min.js")
  link(rel="stylesheet", href="/css/bootstrap.min.css")


  block content
  button.btn.btn-danger(href='/logout' onClick='document.location.href')
    div.container
      div.col-md-6.col-md-offset-3
      p Hello World ! #{name}
        button.btn.btn-success Hello World
        #metrics

    script
      :coffee-script
        $('#get-metrics').click(e) ->
          e.preventDefault()
          $.getJSON '/metrics.json', (data) ->
          $('#content').empty()
          c = ""
          for metric in data
            c+="<p>timestamp: #{metric.timestamp}<br/>value: #{metric.value}"
            $('#metrics').append c
